{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "cSpell.words": [
    "ABAP",
    "Cesu",
    "CLOB",
    "nvarchar",
    "paren",
    "SAVEPOINT",
    "sqlscript",
    "TLOCATOR",
    "upsert"
  ]
}
